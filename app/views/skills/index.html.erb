          <a href="../skills/<%= skill.id%>" class='cardlink'>
            <div class="card-trip">
              <img src=<%= cl_image_path(skill.photo.key) %> />
              <div class="card-trip-infos">
                  <div>
                    <h2><%= "#{skill.name}" %></h2>
                    <p><%= "Level #{skill.level}" %></p>
                  </div>
                  <h2 class="card-trip-pricing"><%= "#{skill.price}" %> â‚¬</h2>
              </div>
            </div>
          </a>
      <% end %>
  </div>

</div>
